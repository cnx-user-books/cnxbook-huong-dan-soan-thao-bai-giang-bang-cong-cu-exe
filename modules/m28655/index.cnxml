    <para id="id26099617">
      <media id="id1168008602272" alt=""><image src="../../media/graphics31.png" mime-type="image/png" height="342" width="450"/></media>
    </para>
    <list id="id25485337" list-type="bulleted">
      <item>Các ký hiệu</item>
    </list>
    <figure id="id26325645">
