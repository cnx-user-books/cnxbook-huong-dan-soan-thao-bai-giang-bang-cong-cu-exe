    <para id="id27030051">Một số ký hiệu khác như:</para>
    <list id="id27124560" list-type="bulleted">
      <item>\omega  <media id="id4013528" alt=""><image src="../../media/graphics34.png" mime-type="image/png" height="11" width="17"/></media></item>
      <item>a \not= b  <media id="id1168008780137" alt=""><image src="../../media/graphics35.png" mime-type="image/png" height="24" width="33"/></media></item>
